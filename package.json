{
  "name": "application",
  "private": true,
  "version": "0.0.0",
  "main": "electron/electron.js",
  "scripts": {
    "dev": "vite --mode dev",
    "build": "tsc --noEmit && vite build",
    "serve": "vite preview",
    "electron": "cross-env IS_DEV=true electron .",
    "electron:pack": "electron-builder --dir",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none npm run dev\" \"npm run electron\"",
    "start:dev": "concurrently -k \"cross-env BROWSER=none npm run dev\" \"npm run electron\" ",
    "start:frontend": "concurrently -k \"cross-env BROWSER=none npm run dev\" \"npm run electron\"",
    "build:for:electron": "cross-env ELECTRON=true vite build --mode prod",
    "electron:builder": "electron-builder",
    "build:electron": "npm run build:for:electron && npm run electron:builder",
    "app:build": "npm run build && npm run build:electron",
    "format": "prettier --write --cache ."
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.8.2",
    "auto-launch": "^5.0.6",
    "axios": "^1.9.0",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.6.0",
    "react-spinners": "^0.17.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "electron": "^36.3.1",
    "electron-builder": "^26.0.12",
    "electron-is-dev": "^3.0.1",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "prettier": "^3.6.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.2.0",
    "vite-tsconfig-paths": "4.3.2"
  },
  "build": {
    "asar": true,
    "files": [
      "dist/",
      "electron/",
      "package.json",
      "src/assets/img/app_icon.ico"
    ],
    "win": {
      "icon": "src/assets/img/app_icon.ico"
    },
    "directories": {
      "buildResources": "resources"
    }
  }
}
